      }
    } catch (error) {
      console.error('Error in immediate initialization:', error);
      if (window.trmnl) {
        window.trmnl.ready();
      } else {
        document.dispatchEvent(new CustomEvent('trmnl-ready'));
        window.trmnlReady = true;
      }
    }
  }, 100);
}
